
<p id="notice"><%= notice %></p>
<% content_for(:title, @recipe.title) %>

<h1>
  <strong><%= @recipe.title %></strong>
</h1>

<%= link_to image_tag(@recipe.image.url(:medium)), @recipe.image.url %>

<h3>
    <% if !@recipe.average_rating.nil? %>
      <strong>Rating:</strong>
      <%= @recipe.average_rating.round(1) %>
    <% end %>
</h3>

<form action="/recipes/<%=@recipe.id%>/add_rating" method="post">
  <select id="rating_id" name="rating[rating]">
    <option>Rate It</options>
    <option value="1">1 Star</option>
    <option value="2">2 Stars</option>
    <option value="3">3 Stars</option>
    <option value="4">4 Stars</option>
    <option value="5">5 Stars</option>
  </select>
  <div class="actions">
    <input type="submit" value="Add Rating">
  </div>
</form>



<p>
  <strong>Author:</strong>
  <%= @recipe.author %>
</p>

<p>
  <strong>Ingredients:</strong>
  <%= @recipe.ingredients %>
</p>

<p>
  <strong>Instructions:</strong>
  <%= @recipe.instructions %>
</p>

<p>
  <strong>Tags: </strong>
  <% @recipe.tags.each do |tag| %>
    <%= tag.name %>,
  <% end %>
</p>

<form action="/recipes/<%= @recipe.id %>/add_tag" method="post">
  <div class="field">
    <label for="tag_name">Tag Name</label>
    <input type="text" name="tag[name]" id="tag_name">
  </div>
  <div class="actions">
    <input type="submit" name="commit" value="Add Tag">
  </div>
</form>


<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %> |
<%= link_to 'Back to Tag index', tags_path %>
