<p id="notice"><%= notice %></p>

<h1>Listing Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @recipes.each do |recipe| %>
        <tr>
          <td><%= recipe.title %></td>
          <td><%= recipe.author %></td>
          <% if !recipe.average_rating.nil? %>
            <td><%= recipe.average_rating.round(1) %></td>
          <% else%>
            <td><%= "Not Rated." %></td>
          <% end %>
          <td><%= link_to 'Show', recipe %> |</td>
          <td><%= link_to 'Edit', edit_recipe_path(recipe) %> |</td>
          <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
  </tbody>
</table>

<form action="/recipes/sort" method="get">
  <input type="submit" value="Order By Rating">
</form>


